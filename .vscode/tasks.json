{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "test",
            "command": "powershell.exe",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "args": [
                "-ExecutionPolicy", "Bypass", "-File", "scripts\\test.ps1"
            ]
        },
        {
            "taskName": "build",
            "command": "powershell.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "-ExecutionPolicy", "Bypass", "-File", "scripts\\build.ps1", "-Clean", "-Module", "PSDocs"
            ]
        }
    ]
}